<h1><%= @place["name"] %></h1>

<ul>
  <% for entry in @entries %>
    <li style="margin-bottom: 10px;">
    <strong><%= entry["title"] %></strong><br>
    <%= entry["occurred_on"] %> <br>
    <%= entry["description"] %></li>
  <% end %>
</ul>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>">New Entry</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>